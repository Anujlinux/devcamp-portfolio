<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <meta name="keyword" content="<%= @seo_keywords %>">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
           <p class="alert"><%= alert %></p>

           <div>
             <div><%= link_to "Home", root_path %></div>
             <div><%= link_to "About", about_path %></div>
             <div><%= link_to "Contact", contact_path %></div>
             <div><%= link_to "Blogs", blogs_path %></div>
             <div><%= link_to "Portfolio", portfolios_path %></div>
           </div>             
           <h2>Hello <%= current_user.first_name %></h2> 
           <% if current_user.is_a?(User) %>
            <%= link_to "Logout", destroy_user_session_path , method: :DELETE %>
           <% else %>
            <%= link_to "Log In", new_user_session_path %>
            <%= link_to "Register", new_user_registration_path %>
            <% end %>
    <%= yield %>

    <% if session[:source] %>
     <p> Thanks for visiting me from <%= session[:source] %> </p>
    <% end %>
    
    </body>
</html>
