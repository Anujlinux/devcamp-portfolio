<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="keyword" content="<%= @seo_keywords %>">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'shared/blog_nav' %>
    <!-- start of blog header -->
    <%= render 'shared/blog_masthead' %>
    <!-- end of blog header -->

    <!-- start of container and row element -->
    <div class="container">

      <div class="row">
    <!-- start of container and row element -->

        <%= yield %>

        <!-- start of sidebar -->
        <%= render 'shared/blog_sidebar' %>
        <!-- end of sidebar -->
      </div>


      <!-- start of footer -->
      <%= render 'shared/blog_footer' %>
      <!-- end of footer -->        

      <%= source_helper("blog") %>
    </div>
  </body>
</html>
