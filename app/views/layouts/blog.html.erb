<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <meta name="keyword" content="<%= @seo_keywords %>">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
           <p class="alert"><%= alert %></p>

           <h2>Hello <%= current_user.first_name %></h2> 
           <%= login_helper %> 
    <%= yield %>
           <%= render "shared/nav" , location: 'bottom' %>           

    <% if session[:source] %>
     <p> Thanks for visiting me from <%= session[:source] %> </p>
    <% end %>
    
    </body>
</html>
