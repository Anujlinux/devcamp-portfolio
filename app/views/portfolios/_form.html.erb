<%= form_with(model: portfolio) do |form| %>
  <% if portfolio.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(portfolio.errors.count, "error") %> prohibited this portfolio from being saved:</h2>

      <ul>
        <% portfolio.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: 'form-control'%>
      </div>

      <div class="form-group">
        <%= form.label :main_image %>
        <%= form.text_area :main_image, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :thumb_image %>
        <%= form.text_area :thumb_image, class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control', rows: 15 %>
      </div>  
    </div>

    <hr />

    <div class="col-md-12">  
      <h2> Technologies used: </h2>

      <div class="form-group">
        <%= form.fields_for :technologies do |technology_form| %>
        <div class="form-group">
          <%= technology_form.label :name %>
          <%= technology_form.text_field :name, class: 'form-control' %>
        </div>
        <% end %>
      </div>

    </div>
  </div>

  <div class="form-group">
    <%= form.submit 'Save Portfolio item', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
